---
import Modal from './Modal.jsx'
---

<header>
	<div class="absolute left-0 right-0 top-2 z-40 pt-14">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl lg:max-w-none">
				<div class="flex items-center justify-between">
					<a aria-label="Home" href="/">
						<span>Agency</span>
					</a>
					<div class="flex items-center gap-x-8">
						<a
							class="inline-flex rounded-full bg-neutral-950 px-4 py-1.5 text-sm font-semibold text-white transition hover:bg-neutral-800"
							href="/contact"
						>
							<span class="relative top-px">Contact us</span>
						</a>
						<Modal client:load />
					</div>
				</div>
			</div>
		</div>
	</div>
</header>
