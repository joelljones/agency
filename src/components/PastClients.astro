---
import { Image } from 'astro:assets';
import brightpath from '../img/logo-light.brightpath.svg';
import familyfund from '../img/logo-light.family-fund.svg';
import greenlife from '../img/logo-light.green-life.svg';
import homework from '../img/logo-light.home-work.svg';
import mailsmirk from '../img/logo-light.mailsmirk.svg';
import northadventures from '../img/logo-light.north-adventures.svg';
import phobia from '../img/logo-light.phobia.svg';
